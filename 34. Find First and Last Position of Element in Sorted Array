class Solution {
    public int[] searchRange(int[] nums, int target) {
        if(nums == null || nums.length == 0){
            return new int[]{-1, -1};
        }
        int left = 0;
        int right = nums.length - 1;
        
        while(left + 1 < right){
            int mid = left + (right - left) / 2;
            if(nums[mid] == target){
                right = mid;
            }else if(nums[mid] < target){
                left = mid + 1;
            }else{
                right = mid - 1;
            }
        }
        int start = -1;
        int end = -1;
        if(nums[left] == target){
            start = left;
        }else if(nums[right] == target){
            start = right;
        }
        int idx = start;
        if(idx != -1){
            while(idx < nums.length){
                if(nums[idx] != target){
                    break;
                }
                idx++;
            }
            return new int[]{start, idx - 1};
        }
        return new int[]{-1, -1};
    }
}
