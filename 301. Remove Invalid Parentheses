class Solution {
    public List<String> removeInvalidParentheses(String s) {
        List<String> res = new ArrayList<>();
        bt(s, res, 0, 0, '(', ')');
        return res;
    }
    
    public void bt(String s, List<String> list, int iStart, int jStart, char open, char close){
        int numOpen = 0, numClose = 0;
        for(int i = iStart ;i < s.length(); i++){
            if(s.charAt(i) == open)
                numOpen++;
            if(s.charAt(i) == close)
                numClose++;
            if(numClose > numOpen){
                for(int j = jStart; j<= i; j++){
                    if(s.charAt(j) == close && (j == jStart || s.charAt(j - 1) != close))
                        bt(s.substring(0,j) + s.substring(j+1), list, i, j, open, close);                   
                }
                 return;
            }
        }
        String reversed = new StringBuilder(s).reverse().toString();
        if(open == '(')
            bt(reversed, list, 0, 0, ')','(');
        else
            list.add(reversed);
    }
}
